<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:singleLine="false"
        android:text="1. Position"
        android:textColor="@color/darkgrey"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/tap_select_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tap_select_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:tint="@color/black"
            app:srcCompat="@drawable/ic_list"
            tools:src="@drawable/ic_list" />

        <TextView
            android:id="@+id/tap_select_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20sp"
            android:layout_marginStart="20sp"
            android:text="@string/fragment_survey_content_spinner_tap_select"
            android:textColor="@color/grey"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>